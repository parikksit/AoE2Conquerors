<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context=".Game" 
    
    >
    <ScrollView
        android:id="@+id/leftPanel"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		>
		<LinearLayout 
		    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
        <ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			</LinearLayout>
            
        
        </ScrollView>
    <ImageView
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/top_panel"
		android:layout_toRightOf="@id/leftPanel"
		>     
    </ImageView>        
    <LinearLayout
        android:id="@+id/resources"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/leftPanel"
		android:layout_marginTop="8dip"
		android:layout_marginLeft="45dip"
		>
        <TextView 
            android:id="@+id/wood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_wood"
            android:drawablePadding="5dip"
            android:text="200"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
        <TextView 
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_food"
            android:drawablePadding="5dip"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginLeft="32dip"/>
        <TextView 
            android:id="@+id/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_gold"
            android:drawablePadding="5dip"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginLeft="32dip"/>
        <TextView 
            android:id="@+id/stone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_stone"
            android:drawablePadding="5dip"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginLeft="32dip"/>
    </LinearLayout>
    
    
    

    <FrameLayout 
        android:id="@+id/background"
      	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/bg1068x649_blank"
		android:layout_alignParentBottom="true"
		android:layout_toRightOf="@id/leftPanel"
        >
		
        <FrameLayout
            android:id="@+id/layout_villager"
	        android:layout_width="40dip"
			android:layout_height="wrap_content"
	        android:layout_marginLeft="135dip"
	        android:layout_marginTop="35dip"
	        android:visibility="invisible"
            
            >
			<ImageView 
	            	android:id="@+id/count_villager_icon"
	            	android:background="@drawable/villager_on_map"
	            	android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"/>
            <ImageView 
	            	android:id="@+id/count_villager_icon"
	            	android:background="@drawable/count_icon"
	            	android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"/>
            <TextView 
				    android:id="@+id/villager_icon_text"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dip"
				    android:layout_gravity="bottom"
				    android:textColor="#f7e906"
				    android:textStyle="bold"
				    android:text=""/>
        </FrameLayout>	
        
        
        
	
	    <FrameLayout 
	        android:id="@+id/tc"
	        android:background="@drawable/tc"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:layout_marginLeft="185dip"
	        android:layout_marginTop="25dip"
	        android:visibility="invisible">
				<ImageView 
	            	android:id="@+id/tc_icon"
	            	android:background="@drawable/count_icon"
	            	android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
				/>
				<TextView 
				    android:id="@+id/tc_icon_text"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dip"
				    android:layout_gravity="bottom"
				    android:textColor="#f7e906"
				    android:textStyle="bold"
				    android:text=""/>  
	    </FrameLayout>
	           
	    <FrameLayout
	        android:id="@+id/castleFrame"
	        android:layout_marginLeft="410dip"
	        android:layout_marginTop="150dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/castle" 
			
	        >
	        <ImageView 
	            android:id="@+id/castle_icon"
	            android:background="@drawable/count_icon"
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				/>
	    	</FrameLayout>
	</FrameLayout>
	<ScrollView
        android:id="@+id/rightPanel"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/background"
		>
		<LinearLayout 
		    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
        <ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			<ImageButton
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/villager_button_ui"
			></ImageButton>
			</LinearLayout>
            
        
        </ScrollView>
        
	<RelativeLayout 
	    android:id="@+id/unitMenu"
	    android:layout_width="500dip"
		android:layout_height="100dip"
		android:background="@drawable/unit_menu"
		android:visibility="invisible"
		android:layout_toLeftOf="@id/rightPanel"
		android:layout_alignBottom="@id/rightPanel"
		android:animateLayoutChanges="true"
		>
			<RelativeLayout 
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dip">
			
				<Button
					android:id="@+id/cross_unitMenu"
					android:background="@drawable/cross_brown"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"/>
				
				
				<LinearLayout
				    android:id="@+id/iconAndName"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    android:gravity="center"
				    >
				    
				    <TextView 
				        android:id="@+id/unitName"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
						android:textColor="#331e00"
						android:textStyle="bold"/>
				    <ImageView
				        android:id="@+id/iconUnitMenu"
				        android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center">
				    </ImageView>"
			    </LinearLayout>
			    
				<LinearLayout
				    android:id="@+id/statsLayout"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    android:layout_toRightOf="@id/iconAndName"
				    android:layout_marginLeft="20dip"
				    android:layout_marginTop="5dip"
				    >
				    <TextView
				        android:id="@+id/attack"
				        android:drawableLeft="@drawable/icon_attack"
				        android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:textColor="#331e00"
				    	android:textStyle="bold"/>
				    <TextView
				        android:id="@+id/range"
				        android:drawableLeft="@drawable/icon_range"
				        android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:textColor="#331e00"
				    	android:textStyle="bold"/>
				</LinearLayout>
				
				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="@drawable/unit_menu_subunit_bg"
				    android:layout_toLeftOf="@id/cross_unitMenu"
				    android:layout_marginRight="10dip"
				    android:orientation="vertical"
				    >
				    
				    <TextView
				        android:layout_marginTop="5dip"
				        android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:text="Units and Technologies"
				    	android:textColor="#331e00"
				    	android:textStyle="bold"
				    	android:layout_gravity="center_horizontal"/>
				    <RelativeLayout 
				        android:id="@+id/creatableUnitsPane"
				        android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:layout_marginLeft="13dip"
				    	android:layout_marginTop="5dip">
				    	<Button
				    	    android:id="@+id/createVillager"
				    	    android:background="@drawable/icon_villager_menu"
				        	android:layout_width="wrap_content"
				    		android:layout_height="wrap_content"/>
				    	<TextView 
				    	    android:layout_width="wrap_content"
				    		android:layout_height="wrap_content"
				    		android:text="Villager"
				    		android:textColor="#331e00"
				    		android:layout_below="@id/createVillager"
				    		android:textSize="4pt"/>
				    	
				        
				    </RelativeLayout>
				    
				    
				</LinearLayout>
				
			</RelativeLayout>
	 </RelativeLayout>
</RelativeLayout>